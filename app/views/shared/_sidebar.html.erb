<p>Project Directory
	<%= button_to "New Entry", new_entry_path(id: nil), 
							method: "get", remote: true %>
	<ul id="root">
	<% @entries.each do |entry| %>
		<% def print_dir(dir) %>
			<li id="entry_link_<%= dir[:id] %>">
				<%= link_to dir[:name], entry_path(dir), remote: true %></li>
			<% if dir.has_children? %>
				<ul>
				<% dir.children.each do |child| %>
					<% print_dir(child) %>
				<% end %>
				</ul>
			<% end %>
		<% end %>
		<% unless entry.has_parent? %>
			<% print_dir(entry) %>
		<% end %>
	<% end %>
	</ul>
</p>